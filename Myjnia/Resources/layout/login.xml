<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/granat1"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25">
    <ImageView
        android:layout_centerInParent="true"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logo2"/>
    
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75">
    
    <android.support.design.widget.TextInputLayout
        android:layout_marginTop="10dp"
        android:id="@+id/emailLoginTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/textColor"
        >
    <EditText
        android:id="@+id/emailLoginText"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:imeOptions="actionNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_marginTop="10dp"
        android:id="@+id/passwordLoginTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/textColor"
        >
    <EditText
        android:id="@+id/passwordLoginText"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:hint="Hasło"
        android:inputType="textPassword"
        android:imeOptions="actionDone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </android.support.design.widget.TextInputLayout>
        
        <TextView
        android:id="@+id/ForgetPassword"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:gravity="right"
        android:textColor="@color/white"
        android:text="Zapomniales hasla?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/LoginButton"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:text="Zaloguj się"
        android:background="@drawable/roundbutton"
        android:textColor="@color/czarny1"
        android:textAllCaps="false"
        android:layout_width="300dp"
        android:layout_height="45dp"/>
        

    <TextView
        android:id="@+id/clickToRegister"
        android:layout_marginTop="40dp"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="Nie masz konta? Zarejestruj się"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

        </LinearLayout>
</LinearLayout>