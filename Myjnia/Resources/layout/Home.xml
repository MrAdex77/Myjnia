      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
    
        <ImageView
        android:id="@+id/UserHomeImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:contentDescription="AccountImage"
        android:src="@drawable/account"/>
        <TextView
        android:id="@+id/WelcomeMessage"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="Witaj, email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/UserHomeImageView"/>

        <TextView
        android:id="@+id/AccountBalance"
        android:layout_marginLeft="10dp"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:text="Saldo: 50 zl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/UserHomeImageView"
        android:layout_below="@+id/WelcomeMessage"/>
 
    </RelativeLayout>


        <GridLayout
            android:layout_gravity="center"
            android:padding="16dp"
            android:rowCount="3"
            android:columnCount="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp"
            app:cardElevation="2dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp">
            <!-- Row One -->

            <android.support.v7.widget.CardView
               android:layout_marginRight="30dp"
               android:layout_gravity="right"
               android:layout_width="147dp"
               android:layout_height="141dp"
               app:cardCornerRadius="4dp"
               app:cardElevation="2dp"
               android:layout_marginBottom="10dp">

                <LinearLayout
                    android:id="@+id/qrcodeLayout"
                    android:background="@color/granat3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/qrcode"
                        android:layout_width="100dp"
                        android:layout_height="100dp">
                    </ImageView>

                    <View
                        android:background="@color/textColor"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />

                    <TextView
                        style="@style/topic_textView"
                        android:text="@string/zakladka_1" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
               android:layout_gravity="left"
               android:layout_width="147dp"
               android:layout_height="141dp"
               app:cardCornerRadius="4dp"
               app:cardElevation="2dp"
               android:layout_marginBottom="10dp">>

                <LinearLayout
                    android:id="@+id/StanMaszynLayout"
                    android:background="@color/granat3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/qrcode"
                        android:layout_width="100dp"
                        android:layout_height="100dp">
                    </ImageView>

                    <View
                        android:background="@color/textColor"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />

                    <TextView
                        style="@style/topic_textView"
                        android:text="@string/zakladka_2" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!-- Row Two -->

            <android.support.v7.widget.CardView
               android:layout_marginRight="30dp"
               android:layout_gravity="right"
               android:layout_width="147dp"
               android:layout_height="141dp"
               app:cardCornerRadius="4dp"
               app:cardElevation="2dp"
               android:layout_marginTop="10dp"
               android:layout_marginBottom="10dp">

                <LinearLayout
                    android:id="@+id/KontoLayout"
                    android:background="@color/granat3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/qrcode"
                        android:layout_width="100dp"
                        android:layout_height="100dp">
                    </ImageView>

                    <View
                        android:background="@color/textColor"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />

                    <TextView
                        style="@style/topic_textView"
                        android:text="@string/zakladka_3" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
               android:layout_marginTop="10dp"
               android:layout_gravity="left"
               android:layout_width="147dp"
               android:layout_height="141dp"
               app:cardCornerRadius="4dp"
               app:cardElevation="2dp"
               android:layout_marginBottom="10dp">>

                <LinearLayout
                    android:id="@+id/UstawieniaLayout"
                    android:background="@color/granat3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/qrcode"
                        android:layout_width="100dp"
                        android:layout_height="100dp">
                    </ImageView>

                    <View
                        android:background="@color/textColor"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />

                    <TextView
                        style="@style/topic_textView"
                        android:text="@string/zakladka_4" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </GridLayout>
    
</LinearLayout>